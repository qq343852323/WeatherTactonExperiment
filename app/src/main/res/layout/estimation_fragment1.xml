<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.weathertactonexperiment.EstimationFragment1">


    <TextView
        android:id="@+id/e1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/e1b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="false"
        android:soundEffectsEnabled="false"
        android:text="vibration1" />

    <Button
        android:id="@+id/e1b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="false"
        android:soundEffectsEnabled="false"
        android:text="vibration2" />

    <Button
        android:id="@+id/e1b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hapticFeedbackEnabled="false"
        android:soundEffectsEnabled="false"
        android:text="vibration3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/e1i1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/temperature_high" />

        <EditText
            android:id="@+id/e1_editTextNumber1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/e1i2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/temperature_medium" />

        <EditText
            android:id="@+id/e1_editTextNumber2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/e1i3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/temperature_low" />

        <EditText
            android:id="@+id/e1_editTextNumber3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />


    </LinearLayout>

    <TextView
        android:id="@+id/e1_warnmsg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#F10101"
        android:textSize="20sp" />

    <Button
        android:id="@+id/e1_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit and next" />


</LinearLayout>